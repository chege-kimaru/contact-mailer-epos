<!--Contact Details-->
<tr>
    <td>
        <h1 style="text-align: center;">Contact Details</h1>
        <p class="para2">
            <span style="color: black; font-weight: 550;">Name:</span>
            <span style="margin-left: 2.4rem;">{{name}}</span>
        </p>
        <p class="para2" style="margin-top: -2rem;">
            <span style="color: black; font-weight: 550;">Email:</span>
            <span style="margin-left: 2.4rem;">{{email}}</span>
        </p>
        <p class="para2" style="margin-top: -2rem;">
            <span style="color: black; font-weight: 550;">Phone:</span>
            <span style="margin-left: 2rem;">{{phone}}</span>
        </p>
        <p class="para2" style="margin-top: -2rem;">
            <span style="color: black; font-weight: 550;">Date:</span>
            <span style="margin-left: 2.7rem;">{{date}}</span>
        </p>
        <p class="para2" style="margin-top: -2rem;">
            <span style="color: black; font-weight: 550;">Message:</span>
        </p>
        <p class="para2" style="margin-top: -2rem;">
            <span>
                {{{message}}}
            </span>
        </p>
    </td>
</tr>